.services
  &__menu
    display: -webkit-flex
    display: -webkit-box
    display: flex
    flex-flow: row wrap
    flex: 1 1 100%
    justify-content: space-around
    box-sizing: border-box

  &__item
    background-color: #ffffff;
    border: 1px solid #ebeef6
    border-radius: 0
    display: block
    align-items: stretch
    flex-basis: 27.5rem
    flex: auto
    flex-grow: 0
    box-sizing: border-box
    width 50%

  &__link
    font-size: 1.25rem
    min-height: 7rem
    text-decoration: none
    padding: 1.5rem 3rem 1.5rem
    background-color transparent
    border none
    border-radius 0
    color #383e49
    display block
    text-align left
    line-height 150%