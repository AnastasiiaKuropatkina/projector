.services
  &__menu
    display: -webkit-flex
    display: -webkit-box
    display: flex
    flex-flow: row wrap
    flex: 1 1 100%
    justify-content: space-around
    box-sizing: border-box

  &__item
    background-color: #ffffff;
    border: 1px solid #ebeef6
    border-radius: 0
    display inline-flex
    align-items: stretch
    flex-basis: 27.5rem
    flex: auto
    flex-grow: 0
    box-sizing: border-box

  &__link
    font-size 1.25rem
    text-decoration none
    background-color transparent
    border none
    border-radius 0
    color #383e49
    display block
    text-align left
    line-height 150%
    align-items center
    display inline-flex
    width 100%
    padding 1rem
    min-height auto
    @media md
      padding .25rem 1rem
      min-height 7rem
