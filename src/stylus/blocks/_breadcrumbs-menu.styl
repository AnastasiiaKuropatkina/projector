.breadcrumbs
  background-color #748096
  &__item
    display inline-block
    float left
    width auto
  &__link
    color #fff
    font-size: 16px
    text-decoration: none
    padding 9px 0 12px 10px
    display inline-block;
    &:after
      content '>'
      color #ffffff
      vertical-align middle
      display inline-block
      font-size 12px
      margin-left .5rem
      margin-right .5rem
.back-buttom
  margin-top 1.5rem
  text-align center
  float none
  @media md
    float left
  &__link
    background-color #748096
    border 1px solid #748096
    border-radius 3px;
    color #ffffff
    text-decoration none
    cursor pointer
    font-size 1.6em
    outline none
    padding-left 50px
    padding-right 38px
    padding-bottom 7px
    padding-top 7px
    position relative
    text-align center
    box-sizing border-box
    -webkit-transition all .25s ease
    transition: all .25s ease
    display inline-block
    height auto
    @media md
      height 42px
      font-size: 2em
    &:before
      content ''
      margin-right 1rem
      background-image url('./../img/back-icon.svg')
      background-repeat no-repeat
      background-size: 24px 18px
      background-position: 0 0
      height 18px
      width 24px;
      position absolute
      display inline-block
      vertical-align middle
      margin-top 5px
      -webkit-transition none
      transition none
      left 11px
    &:hover
      background-color #748096
      border 1px solid #748096
      color #ffffff
      outline none
      padding-left 38px
      padding-right 38px
      -webkit-transition all .25s ease
      transition all .25s ease
      text-decoration none
      &:before
        display none
        -webkit-transition: none
        transition: none
.steps
  font-size 1.25rem
  float none
  margin auto
  margin-top 1.75rem
  margin-bottom: 1.75rem
  text-align center
  @media md
    font-size 2.5em
    float right
    margin-bottom: 0
    text-align right