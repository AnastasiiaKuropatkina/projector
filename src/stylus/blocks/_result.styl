.result
  display: flex
  align-items: center
  justify-content: center
  height: 100%
  overflow: auto
  padding-top: 8em
  position: fixed
  top: 0
  left: 0
  text-align: center
  width: 100%
  &__title
    background-color transparent
    border-radius 0
    color: inherit
    font-size 2em
    font-weight: 700
    margin-bottom: .5em
    @media lg
      font-size 6em
  &__text
    background-color transparent
    border-radius 0
    color: inherit
    font-size: 1.25em
    line-height: 1.6
    @media lg
      font-size: 3.2em
  &__personal-number
    color: #fff
    display: inline-block
    font-size: 2em
    font-weight: 700
    margin: auto
    margin-top: 1rem
    padding: 44px 38px
    position: relative
    @media lg
      font-size: 6em
      margin-top: 2.5rem
      padding: 50px 38px
    &:after
      background-color: #04b700
      border-radius: 100%
      height 7rem
      width: 7rem
      content: ""
      position absolute
      top: 0
      right 0
      left 0
      bottom 0
      margin auto
      z-index -1
      @media lg
        height 12rem
        width: 12rem